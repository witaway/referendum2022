{
    "compilerOptions": {

        "target": "ES2022",
        "module": "commonjs",
        "strict": true,

        "declaration": true,
        "removeComments": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        // "strictPropertyInitialization": false,

        "esModuleInterop": true,
        "sourceMap": true,

        "pretty": true,

        "baseUrl": "./",
        "rootDir": "./src",
        "outDir": "./dist",

        "paths": {
        }
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*.ts", ".eslintrc.js"]
}
